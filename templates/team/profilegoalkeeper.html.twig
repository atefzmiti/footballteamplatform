{% extends 'base.html.twig' %}


{% block content %}


	<br>


	<p style="color: #8A2BE2 ; padding-left: 5em; font-size:25px">
		<span style="text-transform:uppercase">
			{{ fname}}
			<b>{{ lname }}</b>
		</span>
	</p>

	<img style=" display:inline-block ; vertical-align:top; padding-left: 3em;" src="{{ photo }}" width="400" height="500">
	<br>
	<br>
	<div style="margin-top:30px; display:inline-block;color: #00008B ; padding-left: 3em; font-size:18px">

		<p>

			Age :
			<b>
				{{ age }}</b>
		</p>

		Position :
		<b>
			{{ position }}</b>
	</p>
	<p>

		Nationality :
		<b>
			{{ nationality }}</b>
	</p>


	<p>Contract signing date :
		<b>{{ csd.format('d/m/Y') }}</b>
	</p>
	<p>Contract end date :
		<b>{{ ced.format('d/m/Y') }}</b>
	</p>

	<p>

		Height :
		<b>
			{{ height }}</b>
	</p>

	<p>
		Performance :
		{% if b == 0 %}
			{{ performance }}
		{% else %}
			{% if divisiongc <= 0.4 %}
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&star;</span>
			{% elseif divisiongc <= 0.8 %}
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&star;</span>
				<span style="font-size:120%;color:blue;">&star;</span>
			{% else %}
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&bigstar;</span>
				<span style="font-size:120%;color:blue;">&star;</span>
				<span style="font-size:120%;color:blue;">&star;</span>
				<span style="font-size:120%;color:blue;">&star;</span>
			{% endif %}


		{% endif %}
	</p>

</div>

<br>{% endblock %}
